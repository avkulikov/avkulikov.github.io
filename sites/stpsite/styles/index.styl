@import url('//fonts.googleapis.com/css?family=Eczar:800|Open+Sans:600&subset=cyrillic')
	
head =  'Eczar', serif
text =  'Open Sans', sans-serif

body
	background fixed #ffd6d6 url(http://prostopic.net/images/2018/02/ah8oi4js1ypj546193ox.png) center no-repeat
	background-size cover

.container
	height 100vh
	padding-top 5vh
	padding-bottom 5vh
	background-color rgba(0, 153, 59, .45)
	
	
.title
	color #fffcfc
	&__text
		vertical-align middle
		font-family head
		font-size 6rem
		i.fas
			font-size 4rem
	&__description
		font-family text
		font-size .7rem
		padding-left 3.5rem
		
.main
	height 50vh
	.sqr
		text-decoration none
		&:hover
			background-color #00993b
			border #aaaaaa solid 2px
			.sqr__icon
				color #aaaaaa
			.sqr__description
				color #aaaaaa
			
		background-color #fffcfc
		border #00993b solid 2px
		border-radius 0 40px 0 40px  
		padding 15px 20px
		&__icon
			font-size 3.5rem
			color #00993b
		&__description
			margin-top 10px
			line-height 1.5rem
			font-family text
			font-size 1.7rem
			color #00993b
footer
	h5, a
		font-family text
		font-size .8rem
		color #fffcfc
		i
			padding-right 5px
	.info
		cursor pointer
		&:hover
			color #2e2e2e
			.dashed
				border-bottom #2e2e2e dashed 1px
		.dashed
			border-bottom #fffcfc dashed 1px
	a, a:hover
		text-decoration none
	a:hover
		color #2e2e2e 
		
.modal-content
	font-family text
	color #00993b
	a, a:hover
		text-decoration none
	a:hover
		c2e2e2e	